<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StopwatchIIIPomodoroActivity"
    android:background="#252525">

    <ProgressBar
        android:id="@+id/pb_circularProgressBar"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:indeterminateOnly="false"
        android:progress="100"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <TextView
        android:id="@+id/tv_timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00:25:00"
        android:textColor="@color/White"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/pb_circularProgressBar"
        android:layout_alignEnd="@+id/pb_circularProgressBar"
        android:layout_alignBottom="@+id/pb_circularProgressBar"
        android:layout_alignTop="@+id/pb_circularProgressBar"/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:textAllCaps="false"
        android:elevation="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textColor="@color/Black"
        android:backgroundTint="@color/White"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:layout_below="@+id/tv_timeText"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>